mode "switch" {
				bindsym F8 workspace prev_on_output
				bindsym F9 workspace next_on_output
				#bindsym Mod5+F7
				bindsym semicolon focus left
				#bindsym Mod5+F8
				bindsym slash focus right
				#bindsym Mod5+Undo exec tmux previous-window
				#bindsym Mod5+Help exec tmux next-window
				bindsym space mode "."
				bindsym Shift+r mode "resize"
				bindsym r exec i3-rename-workspace
				#bindsym a exec ~/bin/iworkspace 0
				#bindsym s exec ~/bin/iworkspace 1
				#bindsym d exec ~/bin/iworkspace 2
        #bindsym f exec ~/bin/iworkspace 3
        #bindsym g exec ~/bin/iworkspace 4
        #bindsym h exec ~/bin/iworkspace 5
        #bindsym j exec ~/bin/iworkspace 6
        #bindsym k exec ~/bin/iworkspace 7
        #bindsym l exec ~/bin/iworkspace 8
				bindsym n exec i3-switch-active-workspace-group 
}

mode "focus" {
				bindsym j focus left
				bindsym k focus down
				bindsym i focus up
				bindsym l focus right
				bindsym a focus left
				bindsym s focus down
				bindsym w focus up
				bindsym d focus right
				bindsym KP_Subtract mode "switch"
				bindsym KP_Add mode "switch"
				bindsym m mode "move"
				bindsym space mode "."
}

mode "move" {
				bindsym j move left
				bindsym k move down
				bindsym i move up
				bindsym l move right
				bindsym a move left
				bindsym s move down
				bindsym w move up
				bindsym d move right
				bindsym space mode "."
				bindsym KP_Subtract mode "switch"
				bindsym KP_Add mode "switch"
}

mode "jump" {
				bindsym a workspace prev
				bindsym d workspace next
				bindsym q exec ~/bin/iworkspace 0
				bindsym w exec ~/bin/iworkspace 1 
				bindsym e exec ~/bin/iworkspace 2
				bindsym r exec ~/bin/iworkspace 3
				bindsym t exec ~/bin/iworkspace 4
				bindsym y exec ~/bin/iworkspace 5
				bindsym u exec ~/bin/iworkspace 6
				bindsym i exec ~/bin/iworkspace 7
				bindsym o exec ~/bin/iworkspace 8
				bindsym p exec ~/bin/iworkspace 9
#				bindsym n exec --no-startup-id i3-switch-active-workspace-group; mode "default" 
				bindsym m exec --no-startup-id i3-assign-workspace-to-group; mode "default"
				bindsym Escape mode "default"
}
