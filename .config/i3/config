# Start i3bar to display a workspace bar (plus the system information i3statusfinds out, if available)
bar
{
	position top
	status_command i3blocks -c "~/.config/i3/i3blocks.conf"
	status_command i3status -c "~/.config/i3/i3status"
	tray_output primary
	font pango:Source Sans Pro-10 10
	strip_workspace_numbers yes 
	colors
	{
    background #2D2D2D
    statusline #FFFFFF
    separator  #666666

    focused_workspace  #5D93BB #285577 #FFFFFF
    active_workspace   #333333 #173B50 #FFFFFF
    inactive_workspace #666666 #363636 #BBBBBB
    urgent_workspace   #2F343A #900000 #FFFFFF
     binding_mode       #2F343A #900000 #FFFFFF
	}
}

